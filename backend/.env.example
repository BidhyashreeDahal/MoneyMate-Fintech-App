PORT=5000
MONGO_URI=your_mongodb_uri_here
JWT_SECRET=your_jwt_secret_here
NODE_ENV=development
CLIENT_ORIGIN=http://localhost:3000
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
# Model availability varies by account/region. Good defaults:
GEMINI_MODEL=gemini-2.0-flash

# Groq (free-tier option; OpenAI-compatible)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-8b-instant
GROQ_MODEL_RECEIPT=llama-3.1-8b-instant

PASSWORD_RESET_URL_BASE=http://localhost:3000/reset-password

# Resend (recommended)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM="MoneyMate <no-reply@yourdomain.com>"

# SMTP (optional). If not set, backend logs reset link to console.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="MoneyMate <no-reply@moneymate.local>"
